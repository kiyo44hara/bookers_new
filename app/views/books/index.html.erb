<h2>Books</h2>

<table>

  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<h3>New Book</h3>
<%= form_with model: @book do |f| %>
  <div>Title</div>
    <%= f.text_field :title %>
  <div>Body</div>
    <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>
